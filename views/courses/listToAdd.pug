html
    head
        title= title
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/style.css')
        script()
    body
        div.container
            h1 Listes des cours
            if (courses)
                table.table.table-hover.table-striped#dataTables(width='100%')
                    thead
                    tr
                        th Cours
                        th Actions
                    tbody
                    each course, i in courses
                        tr
                        td #{course.sigle} , Groupe #{course.group}
                        td
                            form(action="/api/v1/course/"+course.id method="POST")
                                button.btn.btn-info(type='submit') Choisir
                
            a.btn.btn-outline-primary(href="/") Retour Ã  l'index


