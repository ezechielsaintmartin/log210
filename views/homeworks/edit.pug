html
    head
        title= title
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/style.css')
        script()
    body
        div.container
            h1 Modifier un devoir
            form(action="/api/v1/homework/" + homework.id + "/?_method=PUT" method="POST")
                input(type="hidden" name="courseId" id="courseId" value=homework._courseId)
                input(type="hidden" name="id" id="id" value=homework._id)
                input(type="hidden" name="_method" value="PUT")

                .form-group
                    label(for="description" style="display:block") Description
                    input.form-control(type="text" name="description" id="description" style="display:block" value=homework._description)

                .form-group
                    label(for="maxGrade" style="display:block") Note maximale
                    input.form-control(type="text" name="maxGrade" id="maxGrade" style="display:block" value=homework._maxGrade)

                .form-group
                    label(for="startDate" style="display:block") Date de d√©but
                    input.form-control(type="text" name="startDate" id="startDate" style="display:block" value=homework._startDate)

                .form-group
                    label(for="endDate" style="display:block") Date de fin
                    input.form-control(type="text" name="endDate" id="endDate" style="display:block" value=homework._endDate)

                .form-group
                    label(for="state" style="display:block") Visible:
                    input.form-control(type="checkbox" name="state" id="state" style="display:block" checked=homework._state)

                button.btn.btn-success(type="submit") Modifier


    <script src="//code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="//stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/lib/main.js"></script>
