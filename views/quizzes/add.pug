    body
        div.container
            h1 Ajouter un questionnaire
            form(action="/api/v1/quiz/" method="POST")
                input(type="hidden" name="courseId" id="courseId" value=course.id)

                .form-group
                    label(for="description" style="display:block") Description
                    input.form-control(type="text" name="description" id="description" style="display:block")

                .form-group
                    label(for="active" style="display:block") Actif:
                    input.form-control(type="checkbox" name="active" id="active" style="display:block")

                button.btn.btn-success(type="submit") Ajouter


