    head
        title= title
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/style.css')
        script()
    body
        div.container
            h1 Listes des catégories

            if (tags.length > 0)
                table.table.table-hover.table-striped#dataTables(width='100%')
                        thead
                        tr
                            th Catégorie(s)
                            th Actions
                        tbody
                        each tag, i in tags
                            tr
                            td= tag
                            td 
                                a.btn.btn-info(href="/course/"+course.id+"/quiz/"+quizId+"/"+tag, style='margin-bottom: 10px; margin-right: 10px') Voir

            a.btn.btn-outline-primary(href="/") Retour à l'index


